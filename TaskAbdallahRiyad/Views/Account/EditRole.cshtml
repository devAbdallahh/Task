@model TaskAbdallahRiyad.Models.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<div class="row">
    <div class="container">
        <div class="col-md-8">
            <h3>Edit Informations @Model.RoleName</h3>
            <form asp-action="EditRole" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <input asp-for="RoleId" readonly class="form-control" />
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <br />
            <div class="card">
                <div class="card-header">
                    User in this role
                </div>
                <div class="card-body">
                    @if (Model.Users!.Any())
                    {
                        @foreach (var user in Model.Users!)
                        {
                            @user
                        }

                    }
                    else
                    {
                        <h2>no users role</h2>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="EditUserInRole" class="btn btn-success" asp-route-id="@Model.RoleId">Add/Remove user</a>
                    <a asp-action="RolesList" asp-controller="Account" class="btn btn-danger">Back to List</a>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
