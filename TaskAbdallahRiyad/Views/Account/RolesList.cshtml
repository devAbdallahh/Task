@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "RolesList";
}

<h1 class="text-center">Roles List</h1>

<p>
    <a asp-action="CreateRole" asp-controller="Account" class="btn btn-secondary">Create New Role</a>
    <a asp-action="Index" asp-controller="Contacts" class="btn btn-primary">Contact List</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DetailsRole" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
